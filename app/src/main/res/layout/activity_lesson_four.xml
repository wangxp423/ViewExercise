<com.xp.exercise.viewdraghelper.lesson4.DragLayoutFour android:id="@+id/drag_layout_four"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_hidden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Hidden Button"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/linear_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="#ff5d6ee8"
        android:clickable="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_queen"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="Queen"
            android:textSize="30sp" />
    </LinearLayout>


</com.xp.exercise.viewdraghelper.lesson4.DragLayoutFour>
